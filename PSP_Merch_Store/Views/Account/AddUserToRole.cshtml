@model PSP_Merch_Store.Models.AddRoleToUsers
@{
    ViewBag.Title = "AddUserToRole";
}

<h2>Додај корисник во некоја улога, моментално си логиран: @ViewBag.UserName!</h2>

@using(Html.BeginForm("AddUserToRole", "Account"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.SelectedUserEmail)
        @Html.DropDownListFor(m => m.SelectedUserEmail, new SelectList(ViewBag.Users, "Email", "Email"), new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SelectedRole)
        @Html.DropDownListFor(m => m.SelectedRole, new SelectList(Model.Roles), new { @class = "form-control"})
    </div>
    <button class="btn btn-md btn-default" type="submit">Додај</button>
}

